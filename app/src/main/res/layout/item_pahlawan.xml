<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/item_foto_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/item_foto_image"
        app:layout_constraintLeft_toRightOf="@id/item_foto_image"
        app:layout_constraintTop_toTopOf="@id/item_foto_image">
        <TextView
            android:id="@+id/txt_pahlawan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Nama Pahlawan"
            style="@style/title_14"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_tgl_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            style="@style/text"
            android:text="Tanggal lahir" />
        <TextView
            android:id="@+id/txt_wafat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            style="@style/text"
            android:text="Tanggal wafat" />
    </LinearLayout>

    <View
        android:id="@+id/line_yellow1"
        app:layout_constraintTop_toBottomOf="@id/item_foto_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/yellow" />



</androidx.constraintlayout.widget.ConstraintLayout>